<h1>Your Favourites</h1>

<table class="table table-bordered">
  <thead>
  <tr>
    <th></th>
    <th>Product Name</th>
    <th>Price</th>
    <th>Alcohol Content(%)</th>
    <th>Variety/Style</th>
    <th>Volume (ml)</th>
  </tr>
  </thead>
  <tbody>
  <% @favourites.each do |favorite| %>
      <tr>
        <th scope="row" align="center">
          <a href="<%= favorite.image_thumb_url %>">
            <img src="<%= favorite.image_thumb_url %>" style="width: 128px; height: 128px;"/>
          </a>
        </th>
        <th><%= link_to favorite.name, "/items/#{favorite.id}" %></th>
        <th><%= favorite.get_price_in_dollars %></th>
        <th><%= favorite.alcohol_content_in_percent %></th>
        <% if favorite.varietal.present? %>
            <th><%= favorite.varietal %></th>
        <% else %>
            <th><%= favorite.style %></th>
        <% end %>
        <th><%= favorite.volume_in_milliliters %></th>
      </tr>
  <% end %>
  </tbody>
</table>